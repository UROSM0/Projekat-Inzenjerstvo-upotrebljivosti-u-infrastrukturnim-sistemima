<Window x:Class="NetworkService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModel="clr-namespace:NetworkService.ViewModel"
        xmlns:views="clr-namespace:NetworkService.Views"
        Title="NetworkService" Width="1000" Height="650"
        WindowStartupLocation="CenterScreen">

    
    <Window.DataContext>
        <viewModel:MainWindowViewModel/>
    </Window.DataContext>

   
    <Window.InputBindings>
        <KeyBinding Gesture="Ctrl+1" Command="{Binding NavCommand}" CommandParameter="entities"/>
        <KeyBinding Gesture="Ctrl+2" Command="{Binding NavCommand}" CommandParameter="display"/>
        <KeyBinding Gesture="Ctrl+3" Command="{Binding NavCommand}" CommandParameter="graph"/>
        <KeyBinding Gesture="Ctrl+Oem3" Command="{Binding OpenTerminalCommand}"/>
    </Window.InputBindings>

    
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:EntitiesViewModel}">
            <views:EntitiesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:DisplayViewModel}">
            <views:DisplayView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:GraphViewModel}">
            <views:GraphView/>
        </DataTemplate>
    </Window.Resources>

    <DockPanel Background="{StaticResource Clr.Bg}">
        
        <Border DockPanel.Dock="Top"
                Background="{StaticResource Clr.Surface}"
                BorderBrush="{StaticResource Clr.Border}"
                BorderThickness="0,0,0,1"
                Padding="12">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="Entities" Command="{Binding NavCommand}" CommandParameter="entities"/>
                <Button Content="Display"  Margin="8,0,0,0" Command="{Binding NavCommand}" CommandParameter="display"/>
                <Button Content="Graph"    Margin="8,0,0,0" Command="{Binding NavCommand}" CommandParameter="graph"/>
                <Button Content="Terminal" Margin="8,0,0,0" Command="{Binding OpenTerminalCommand}" />
            </StackPanel>
        </Border>

       
        <ContentControl Content="{Binding CurrentViewModel}" Margin="16"/>
    </DockPanel>
</Window>
