<UserControl x:Class="NetworkService.Views.DisplayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:NetworkService.Helpers"
             xmlns:model="clr-namespace:NetworkService.Model"
             xmlns:viewmodel="clr-namespace:NetworkService.ViewModel"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodel:DisplayViewModel, IsDesignTimeCreatable=False}">

    <UserControl.Resources>
        <helpers:OutOfRangeConverter x:Key="OutOfRange" Low="250" High="350"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource Clr.Bg}" Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        
        <Border Grid.Column="0" Style="{StaticResource Card}" Padding="10">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top"
                           Style="{StaticResource Txt.Title}"
                           FontSize="16"
                           Margin="0,0,0,8"
                           Text="Entities by Type"/>

                <TreeView ItemsSource="{Binding UnplacedEntities.Groups}">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="True"/>
                        </Style>
                    </TreeView.ItemContainerStyle>

                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Items}">
                            <TextBlock Text="{Binding Name}"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource Clr.SubText}"/>
                            <HierarchicalDataTemplate.ItemTemplate>
                                <DataTemplate DataType="{x:Type model:ReactorTemp}">
                                    <Border BorderBrush="{StaticResource Clr.Border}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="6"
                                            Margin="2"
                                            Background="White"
                                            Cursor="Hand"
                                            helpers:DragAndDropBehavior.IsDragSource="True"
                                            helpers:DragAndDropBehavior.DragData="{Binding}">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Image Source="{Binding Type.ImagePath}"
                                                   Width="24" Height="24" Stretch="Uniform"
                                                   Margin="0,0,6,0"/>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}"/>
                                                <TextBlock FontSize="12" Foreground="{StaticResource Clr.SubText}">
                                                    <Run Text="ID: "/><Run Text="{Binding Id}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </HierarchicalDataTemplate.ItemTemplate>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </DockPanel>
        </Border>

        
        <Border Grid.Column="2" Style="{StaticResource Card}" Padding="10">
            
            <DockPanel helpers:AdornerAttach.Connections="{Binding Connections}">
                
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Style="{StaticResource Txt.Title}" FontSize="16" Text="Drag And Drop Grid (12 slots)"/>
                    <CheckBox Content="Connect mode" Margin="12,0,0,0"
                              VerticalAlignment="Center"
                              IsChecked="{Binding IsConnectMode}"/>
                </StackPanel>

                <ItemsControl ItemsSource="{Binding Slots}"
                              ScrollViewer.CanContentScroll="False">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="4" Rows="3"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="6"
                                    Background="{StaticResource Clr.Surface}"
                                    BorderBrush="{StaticResource Clr.Border}"
                                    BorderThickness="1.5"
                                    CornerRadius="12"
                                    Padding="0"
                                    MinHeight="120"
                                    helpers:SlotElementBinder.Bind="True"
                                    helpers:DragAndDropBehavior.IsDropTarget="True"
                                    helpers:DragAndDropBehavior.DropCommand="{Binding DataContext.DropToSlotCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    helpers:DragAndDropBehavior.DropCommandParam="{Binding}"
                                    helpers:DragAndDropBehavior.IsDragSource="True"
                                    helpers:DragAndDropBehavior.DragData="{Binding Occupant}"
                                    helpers:ClickBehavior.ClickCommand="{Binding DataContext.SlotClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    helpers:ClickBehavior.ClickCommandParameter="{Binding}">

                                
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Value="True">
                                                <DataTrigger.Binding>
                                                    <Binding Path="Occupant.LastValue" Converter="{StaticResource OutOfRange}"/>
                                                </DataTrigger.Binding>
                                                <Setter Property="BorderBrush" Value="{StaticResource Clr.Error}"/>
                                                <Setter Property="BorderThickness" Value="2.5"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Border CornerRadius="12" ClipToBounds="True">
                                    <Grid>
                                        
                                        <TextBlock Text="Drop here"
                                                   Foreground="{StaticResource Clr.SubText}"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Occupant}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        
                                        <Grid>
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Occupant}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>

                                            
                                            <Image Source="{Binding Occupant.Type.ImagePath}" Stretch="UniformToFill" Opacity="0.20"/>

                                           
                                            <Border Background="#22D93025">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Value="True">
                                                                <DataTrigger.Binding>
                                                                    <Binding Path="Occupant.LastValue" Converter="{StaticResource OutOfRange}"/>
                                                                </DataTrigger.Binding>
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>

                                            
                                            <Border Background="#F9FFFFFF" Padding="8" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Occupant.Name}" FontWeight="SemiBold"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                        <TextBlock FontSize="12" Foreground="{StaticResource Clr.SubText}" Text="ID: "/>
                                                        <TextBlock FontSize="12" Foreground="{StaticResource Clr.SubText}" Text="{Binding Occupant.Id}"/>
                                                        <TextBlock FontSize="12" Margin="12,0,0,0" Foreground="{StaticResource Clr.SubText}" Text="Last: "/>
                                                        <TextBlock FontSize="12" Foreground="{StaticResource Clr.SubText}"
                                                                   Text="{Binding Occupant.LastValue, StringFormat=F2, TargetNullValue=—}"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>

                                            
                                            <Border HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8"
                                                    Background="{StaticResource Clr.Error}" CornerRadius="12" Padding="8,4">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Value="True">
                                                                <DataTrigger.Binding>
                                                                    <Binding Path="Occupant.LastValue" Converter="{StaticResource OutOfRange}"/>
                                                                </DataTrigger.Binding>
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="ALERT" Foreground="White" FontWeight="SemiBold" FontSize="12"/>
                                            </Border>

                                            
                                            <Button Content="Clear"
                                                    Padding="10,6"
                                                    HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="8"
                                                    Command="{Binding DataContext.ClearSlotCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
